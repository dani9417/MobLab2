<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="10dp">
    <TextView
            android:id="@+id/tvTodoTask" android:text="@string/todo_task"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/etTodoTask"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:inputType="text"

    />

    <TextView
            android:id="@+id/tvTodoCompleted" android:text="@string/todo_completed"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <CheckBox android:id="@+id/cbTodoCompleted" android:layout_height="wrap_content"
              android:layout_width="wrap_content"/>


</LinearLayout>